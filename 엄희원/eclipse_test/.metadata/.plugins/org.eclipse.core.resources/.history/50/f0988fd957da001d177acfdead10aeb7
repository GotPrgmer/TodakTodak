package com.in28minutes.oops;

import java.util.Arrays;

public class MotorBike {
	// state
	private int speed;

	// behavior
	// method
	// inputs - int speed
	// outputs - void
	// name -setSpeed

	int getSpeed() {
		return this.speed;
	}

	void start() {
		System.out.println("Bike started");
	}

	public void setSpeed(int speed) {
		System.out.println("arg " + speed);
		System.out.println("global " + this.speed);
		int[] a = new int[4];
		System.out.println(Arrays.toString(a));
		this.speed = speed;
	}
}
